// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "publish extension",
            "type": "shell",
            "command": "vsce",
            "args": [
                "publish"
            ],
            "problemMatcher": []
        },
        {
            "label": "install extension",
            "type": "shell",
            "command": "code --install-extension ${input:ext-vsix-file-path}"
        },
        ,
        {
            "label": "un-install extension",
            "type": "shell",
            "command": "code --uninstall-extension ${input:ext-vsix-file-path}"
        }
    ],
    "inputs": [
        {
            "id": "ext-vsix-file-path",
            "type": "promptString",
            "description": "extension .vsix file path",
            "default": "./google-translate-ext-2.1.0.vsix"
        }
    ]
}